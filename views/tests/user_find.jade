extends layout

block test-result
    .jumbotron
        h1 Test: Módulo de usuario
        br
        h3 Operación: Buscar [User.find()]
    p.text-muted Resultado
    .panel
        if(status=='ERROR')
            h1.text-danger #{status}:
            h3.text-danger #{response}
            hr
            .well.text-danger
                h4 #{errMessage}
                p
                    | Código de error: #{errCode}
                    br
                    | Mensaje del servidor:
                    br
                    | #{err}
        else if(status=='ADVERTENCIA')
            h1.text-warning #{status}:
            h3.text-warning #{response}
        else if(status=='OK')
            h1.text-success #{status}:
            h3.text-success #{response}
            hr
            .well.text-info
                ul
                    li Nombre: #{user.name}
                    li Ap. Paterno: #{user.lastname}
                    li Ap. Materno: #{user.surname}
                    li &Aacute;rea: #{user.area}
                    li Perfil: #{user.profile}
                    li Estatus: #{user.status}
        else
            h1.text-info #{status}:
            h3.text-info #{response}
            hr
block js-imports
    script.
        $(function() {
            $('a.js-back').click(function(e){
                e.preventDefault();
                parent.history.back(1);
            });
        });